<%- include("../partials/header") %>

<!-- Breadcrumb Section Begin -->
    <div class="breacrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-text">
                        <a href="/products"><i class="fas fa-home"></i> Home</a>
                        <span>New Product</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
<!-- Breadcrumb Form Section Begin -->

<div class="container mt-5">
		<h1 class="text-center">Add a New Product</h1>
		<div class="register-form" style="width: 50%; margin: 25px auto;">
			<form action="/products" method="POST" enctype="multipart/form-data">
				<div class="form-group">
					<input type="text" class="form-control" name="category" placeholder="Product Category" required>
				</div>
				<label>Foreign Product</label>
				<div class="form-group">
					<input type="text" class="form-control" name="brandF" placeholder="Foreign Brand Name" required>
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="productNameF" placeholder="Foreign Product Name" required>
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="imageF" placeholder="Foreign Product Image URL">
				</div>
				<label style="margin-left: 40%;">OR</label>
				<div class="form-group">
					<input type="file" class="form-control" name="productF">
				</div> 
				<div class="form-group">
					<input type="number" class="form-control" name="priceF" step="0.01" placeholder="Approx. Price of Foreign Product(in Rupee)" required>
				</div>
				<label>Indian Product</label>
				<div class="form-group">
					<input type="text" class="form-control" name="brandI" placeholder="Indian Brand Name" required>
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="productNameI" placeholder="Indian Product Name" required>
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="imageI" placeholder="Indian Product Image URL" >
				</div>
				<label style="margin-left: 40%;">OR</label>
				<div class="form-group">
					<input type="file" class="form-control" name="productI">
				</div>
				<div class="form-group">
					<input type="number" class="form-control" name="priceI" step="0.01" placeholder="Approx. Price of Indian Product(in Rupee)" required>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-warning btn-block">Submit!</button>
				</div>
			</form>	
			<div class="switch-login">
                <a href="/products" class="or-login">Go Back</a>
            </div>
		</div>
</div>

<%- include ("../partials/footer") %>