<%- include("../partials/header") %>

<!-- Breadcrumb Section Begin -->
    <div class="breacrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-text">
                        <a href="/products"><i class="fas fa-home"></i> Home</a>
                        <span>Edit Product</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
<!-- Breadcrumb Form Section Begin -->

<div class="container mt-5">
	<h1 class="text-center">Edit <%= product.productNameI %>	</h1>
		<div class="register-form" style="width: 50%; margin: 25px auto;">
			<form action="/products/<%= product._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
				<div class="form-group">
					<input type="text" class="form-control" name="category" value="<%= product.category %>">
				</div>
				<label>Foreign Product</label>
				<div class="form-group">
					<input type="text" class="form-control" name="brandF" value="<%= product.brandF %>">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="productNameF" value="<%= product.productNameF %>" >
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="imageF" value="<%= product.imageF %>">
				</div>
				<label style="margin-left: 40%;">OR</label>
				<div class="form-group">
					<input type="file" class="form-control" name="productF">
				</div> 
				<div class="form-group">
					<input type="number" class="form-control" name="priceF" step="0.01" value="<%= product.priceF %>" > 
				</div>
				<label>Indian Product</label>
				<div class="form-group">
					<input type="text" class="form-control" name="brandI" value="<%= product.brandI %>" >
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="productNameI" value="<%= product.productNameI %>" >
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="imageI" value="<%= product.imageI %>" >
				</div>
				<label style="margin-left: 40%;">OR</label>
				<div class="form-group">
					<input type="file" class="form-control" name="productI">
				</div>
				<div class="form-group">
					<input type="number" class="form-control" name="priceI" step="0.01" value="<%= product.priceI %>" >
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-warning btn-block">Submit!</button>
				</div>
			</form>	
			<div class="switch-login">
                <a href="/products/<%= product.id %>" class="or-login">Go Back</a>
            </div>	
		</div>
</div>

<%- include ("../partials/footer") %>