<div class="container mt-5">
	<h1 class="text-center">Add a Comment to <%= product.productNameI %></h1>
	<div class="register-form" style="width: 50%; margin: 25px auto;">
		<form action="/products/<%= product._id %>/comments" method="POST">
			<div class="form-group">
				<input type="text" class="form-control" name="text" placeholder="Text">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-warning btn-block">Submit!</button>
			</div>
		</form>	
		<div class="switch-login">
               <a href="/products/<%= product._id %>" class="or-login">Go Back</a>
           </div>
	</div>
</div>

